{% extends 'base.html.twig' %}

{% block title %}Ajouter un employé{% endblock %}

{% block body %}

    {# edit viens de EmployeController dans la function add au niveau du return
    il nous permet de voir si l'employé hesiste, si c'est le cas on affiche "editer un employe" sinon "ajouter un employé" #}
    {% if edit %}

        <h1>Editer un employé</h1>

    {% else %}

        <h1>Ajouter un employé</h1>

    {% endif %}

    {# {{ form(formAddEmploye) }} #}

    {# Permet de mettre en forme le formulaire d'ajout d'un employé #}
    {{ form_start(formAddEmploye) }}

        <div class="nomPrenom">
            {{ form_row(formAddEmploye.nom) }}
            {{ form_row(formAddEmploye.prenom) }}
        </div>

        <div>
            {{ form_row(formAddEmploye.dateNaissance) }}
            {{ form_row(formAddEmploye.dateEmbauche) }}
            {{ form_row(formAddEmploye.ville) }}
            {{ form_row(formAddEmploye.entreprise) }}
            {{ form_row(formAddEmploye.submit) }}
        </div>

    {{ form_end(formAddEmploye) }}

{% endblock %}